<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="16dp" /> <!-- Border radius for shadow -->
        </shape>
    </item>

    <!-- Main Button Layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- Gradient Background -->
            <gradient
                android:angle="45"
                android:startColor="@color/blue_DDF"
                android:endColor="@color/blue_DDF"
                android:type="linear" />
            <!-- Border -->
            <stroke android:width="4dp" android:color="@color/blue_164" />
            <!-- Rounded Corners -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
