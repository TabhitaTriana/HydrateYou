<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/white" /> <!-- Warna saat tombol ditekan -->
        </shape>
    </item>

    <!-- State default (saat tombol tidak ditekan) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/white" /> <!-- Warna default -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Border hitam dengan lebar 2dp -->
        </shape>
    </item>
</selector>
