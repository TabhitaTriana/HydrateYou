<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- TextView Home -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Frame Layout untuk Fragment -->
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Progress Bar Horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:max="2000"
            android:progressDrawable="@drawable/circular_progressbar"
            android:progressTint="@color/blue_427" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvkonsumAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_KonsumAir"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/waterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ml / 2000 ml"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Judul Konsum Bulanan -->
    <TextView
        android:id="@+id/tv_tittleKonsumBulanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tittle_KonsumBulanan"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginBottom="16dp" />

    <!-- Grafik Konsum Bulanan -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chartKonsumBulanan"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="visible"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled" />

</LinearLayout>
