<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5F3FF"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/celeng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:marginBottom="16dp"
        android:textColor="#000" />

    <!-- Target Section -->
    <TextView
        android:id="@+id/targetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2L per hari"
        android:textSize="36sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000" />

    <!-- Daily Percentage Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persentase Harian"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000" />

        <ProgressBar
            android:id="@+id/dailyProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:progress="75"
            android:max="100"
            android:indeterminate="false"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/dailyTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2L per hari"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000" />

        <Button
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#7DB9E8"
            android:layout_gravity="center_horizontal"
            android:text="Gabung"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Badge System Section -->
    <TextView
        android:id="@+id/badgeSystemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistem Lencana"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000" />

    <!-- Badge List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_badge_bronze" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="3 hari"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 hari"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_badge_silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="7 hari"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 hari"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_badge_gold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="30 hari"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 hari"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
